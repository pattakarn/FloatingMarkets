<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:card_view="http://schemas.android.com/apk/res-auto"--><!--android:id="@+id/cv"--><!--android:layout_width="100dp"--><!--android:layout_height="100dp"--><!--android:layout_gravity="center"--><!--android:elevation="8dp"--><!--card_view:cardCornerRadius="10dp"--><!--card_view:cardUseCompatPadding="true">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="4dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_size"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_sizeroom"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="size"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_guest"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_person"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="guest"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_bed"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_bed"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_bed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bed"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_breakfast"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_breakfast"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="breakfast"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_wifi"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wifi"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_air"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_air"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_air"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="air"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_smoke"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_smoke"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_smoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="smoke"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>



</LinearLayout>